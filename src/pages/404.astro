---
import BaseLayout from "../components/layout/BaseLayout.astro";
import { TriangleAlert } from "lucide-react";
---

<BaseLayout title="Page Not Found" description="404 - Page NotFound">
  <main
    class="flex items-center justify-center min-h-[calc(100vh-250px)] text-center"
  >
    <div class="flex flex-col items-center">
      <TriangleAlert
        className="w-24 h-24 text-purple-500 mb-8"
        strokeWidth={1.5}
      />
      <h1 class="text-6xl font-bold text-white mb-4">404</h1>
      <p class="text-2xl text-neutral-300 max-w-md mx-auto mb-6">
        Oops! The page you're looking for wasn't found.
      </p>

      <a
        href="/"
        class="px-6 py-3 border-2 border-purple-500 text-purple-500 rounded-lg hover:bg-purple-500 hover:text-white transition-colors duration-300"
      >
        Return to Home
      </a>
    </div>
  </main>
</BaseLayout>
