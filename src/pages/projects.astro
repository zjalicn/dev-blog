---
import BaseLayout from "../components/layout/BaseLayout.astro";
import { Github, ExternalLink } from "lucide-react";

interface Project {
  title: string;
  description: string;
  image: string;
  tags: string[];
  github?: string;
  preview?: string;
}

const projects: Project[] = [
  {
    title: "Lumiere",
    description:
      "A platform for independent musicians to grow their brand. Built with Next.js, featuring real-time analytics, media players, and dynamic artist profiles. Integrated with various music APIs and AWS services.",
    image: "/blog-placeholder-1.jpg",
    tags: ["Next.js", "TypeScript", "AWS", "PostgreSQL"],
    preview: "https://tree-link-three.vercel.app",
  },
  {
    title: "SaaStarter",
    description:
      "A fully functional Next.js SaaS public template for creating subscription sites with user authentication, email verification and forgot password flow using sessions, authenticated pages and API routes, database synchronization with Stripe via webhooks, functional User Settings page, user uploaded file storage",
    image: "/blog-placeholder-3.jpg",
    tags: ["Next.js", "TypeScript", "Tailwind", "PostgreSQL", "Stripe"],
    github: "https://github.com/thxmos/saastarter",
  },
  {
    title: "Dev Blog",
    description:
      "A performant blog and portfolio site built with Astro. Features static site generation, markdown content, and a dark theme.",
    image: "/blog-placeholder-2.jpg",
    tags: ["Astro", "TypeScript", "Tailwind"],
  },
];
---

<BaseLayout title="Projects - Nikola Zjalic" description="My Recent Projects">
  <main class="mt-16 max-w-5xl mx-auto px-6">
    <h1 class="text-4xl font-bold text-white text-center mb-12">Projects</h1>

    <div class="space-y-12">
      {
        projects.map((project) => (
          <div class="bg-neutral-900/50 rounded-xl overflow-hidden hover:bg-neutral-900/70 transition-colors duration-300">
            <div class="flex flex-col md:flex-row">
              {/* Image */}
              <div class="w-full md:w-2/5">
                <img
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover min-h-[200px] md:min-h-[300px]"
                />
              </div>

              {/* Content */}
              <div class="w-full md:w-3/5 p-6 md:p-8 flex flex-col">
                <h3 class="text-2xl font-bold text-white mb-2">
                  {project.title}
                </h3>

                <p class="text-neutral-300 mb-4 flex-grow">
                  {project.description}
                </p>

                {/* Tags */}
                <div class="flex flex-wrap gap-2 mb-6">
                  {project.tags.map((tag) => (
                    <span class="px-3 py-1 bg-neutral-800 rounded-full text-sm text-neutral-300 hover:text-purple-400 transition-colors duration-200 cursor-default">
                      {tag}
                    </span>
                  ))}
                </div>

                {/* Action Buttons */}
                <div class="flex gap-4 w-full justify-end">
                  {project.github && (
                    <a
                      href={project.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 px-4 py-2 bg-neutral-800 rounded-lg text-white hover:bg-neutral-700 transition-colors duration-200"
                    >
                      <Github size={16} />
                      <span>GitHub</span>
                    </a>
                  )}

                  {project.preview && (
                    <a
                      href={project.preview}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 px-4 py-2 border border-purple-500 rounded-lg text-purple-500 hover:bg-purple-500 hover:text-white transition-all duration-200"
                    >
                      <ExternalLink size={16} />
                      <span>Preview</span>
                    </a>
                  )}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </main>
</BaseLayout>
