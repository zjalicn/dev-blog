---
import { HERO_CONTENT } from "@/constants/content";
import { Images } from "@/utils/images";

interface Props {
  name?: string;
  title?: string;
  content?: string;
}

const {
  name = "Nikola Zjalic",
  title = "Full Stack Developer",
  content = HERO_CONTENT,
} = Astro.props;
---

<div class="border-b border-neutral-900 pb-4 lg:mb-36">
  <div class="flex flex-wrap">
    <div class="w-full lg:w-1/2 lg:p-8">
      <div class="flex justify-center mb-8">
        <img
          src={Images.hero.src}
          alt={name}
          width={1200}
          height={1200}
          class="animate-fade-in-delayed"
        />
      </div>
    </div>
    <div class="w-full lg:w-1/2 pt-8">
      <div class="flex flex-col items-center lg:items-start gap-4">
        <h1
          class="pb-4 text-6xl font-thin text-white tracking-tight lg:mt-16 lg:text-8xl animate-fade-in"
        >
          {name}
        </h1>
        <span
          class="ml-2 bg-gradient-to-r from-red-400 via-purple-400 to-blue-500 bg-clip-text text-3xl tracking-tight text-transparent animate-slide-in"
        >
          {title}
        </span>
        <p
          class="ml-2 max-w-xl py-6 font-light tracking-tighter text-lg animate-fade-up"
        >
          {content}
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateX(-100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animate-fade-in {
    animation: fade-in 0.5s ease-out forwards;
  }

  .animate-slide-in {
    animation:
      slide-in 0.5s ease-out forwards,
      gradient-shift 3s ease infinite 0.5s;
    animation-delay: 0.3s;
    opacity: 0;
    background-size: 200% auto;
  }

  .animate-fade-up {
    animation: fade-up 0.5s ease-out forwards;
    animation-delay: 0.6s;
    opacity: 0;
  }

  .animate-fade-in-delayed {
    animation: fade-in 0.5s ease-out forwards;
    animation-delay: 0.9s;
    opacity: 0;
  }

  .animate-gradient {
    background-size: 200% auto;
    animation: gradient-shift 3s ease infinite;
  }
</style>
